{
	"extends": [
		"tslint:recommended"
	],
	"rules": {
		"semicolon": {
			"options": ["never"]
		},
		"quotemark": {
			"options": ["single", "avoid-escape", "jsx-double"]
		},
		"indent": {
			"options": ["tabs", 4]
		},
		"arrow-parens": {
			"options": ["ban-single-arg-parens"]
		},
		"no-console": false,
		"trailing-comma": false,
		"object-literal-sort-keys": false
	}
}

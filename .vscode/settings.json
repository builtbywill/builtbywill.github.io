{
	"css.validate": false,
	"scss.validate": false,
	"stylelint.config": {
		"extends": "stylelint-config-standard",
		"rules": {
			"indentation": "tab"
		},
		"ignoreFiles": "src/**/*.{ts,tsx,js,jsx}"
	},
	"editor.codeActionsOnSave": {
		"source.fixAll": "explicit",
		"source.organizeImports": "explicit"
	}
}
{
	"name": "builtbywill",
	"version": "2.0.0",
	"private": true,
	"homepage": "https://builtbywill.com",
	"dependencies": {
		"@types/jest": "^25.1.2",
		"@types/node": "^10.12.18",
		"@types/react": "^16.9.19",
		"@types/react-dom": "^16.9.5",
		"@types/react-helmet": "^5.0.15",
		"@types/react-router": "^5.1.4",
		"@types/react-router-dom": "^5.1.3",
		"core-js": "^3.6.4",
		"gh-pages": "^2.2.0",
		"prop-types": "^15.7.2",
		"react": "^16.12.0",
		"react-dom": "^16.12.0",
		"react-ga": "^2.7.0",
		"react-helmet": "^5.2.1",
		"react-lazy-load": "^3.0.13",
		"react-loader-spinner": "^3.1.5",
		"react-router-dom": "^5.1.2",
		"react-scripts": "3.4.0",
		"tachyons": "^4.11.1",
		"typescript": "^3.7.5"
	},
	"devDependencies": {
		"cross-env": "^7.0.0",
		"husky": "^4.2.3",
		"lint-staged": "^10.0.7",
		"npm-run-all": "^4.1.5",
		"prettier": "^1.19.1",
		"source-map-explorer": "^2.2.2",
		"stylelint": "^13.2.0",
		"stylelint-config-standard": "^20.0.0",
		"tslint": "^6.0.0"
	},
	"resolutions": {
		"@types/react": "^16.9.19",
		"@types/react-router": "^5.1.4"
	},
	"scripts": {
		"start": "react-scripts start",
		"build": "react-scripts build",
		"analyze": "source-map-explorer build/static/js/main.*",
		"test": "react-scripts test",
		"test:ci": "cross-env CI=true yarn test",
		"lint:ts": "tslint -c tslint.json -p tsconfig.json 'src/**/*.{ts,tsx}'",
		"lint:css": "stylelint \"src/**/*.css\"",
		"lint": "run-s lint:**",
		"prettier:check": "prettier --list-different \"src/**/*.{ts,tsx}\"",
		"prettier:write": "prettier --write \"src/**/*.{ts,tsx}\"",
		"fix:ts": "yarn prettier:write && yarn lint:ts --fix",
		"fix:css": "yarn lint:css --fix",
		"fix": "run-s fix:**",
		"predeploy": "yarn build",
		"deploy": "gh-pages -b master -d build -m"
	},
	"browserslist": [
		">0.2%",
		"not dead",
		"not ie <= 11",
		"not op_mini all"
	],
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"pre-push": "npm run test:ci"
		}
	},
	"lint-staged": {
		"*.ts": [
			"tslint --fix",
			"git add"
		],
		"*.tsx": [
			"tslint --fix",
			"git add"
		],
		"*.css": [
			"stylelint --fix",
			"git add"
		]
	},
	"jest": {
		"collectCoverageFrom": [
			"src/**/*.{ts,tsx,js,jsx}",
			"!src/index.tsx",
			"!src/utils/serviceWorker.ts"
		]
	},
	"eslintConfig": {
		"extends": "react-app"
	},
	"prettier": {
		"parser": "typescript",
		"trailingComma": "es5",
		"useTabs": true,
		"tabWidth": 4,
		"semi": false,
		"singleQuote": true,
		"printWidth": 100,
		"jsxBracketSameLine": true
	},
	"stylelint": {
		"extends": "stylelint-config-standard",
		"rules": {
			"indentation": "tab"
		}
	}
}

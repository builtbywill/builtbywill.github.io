{
	"name": "builtbywill",
	"version": "2.0.0",
	"private": true,
	"homepage": "https://builtbywill.com",
	"dependencies": {
		"@types/jest": "^23.3.12",
		"@types/node": "^10.12.18",
		"@types/react": "^16.7.18",
		"@types/react-dom": "^16.0.11",
		"@types/react-helmet": "^5.0.8",
		"@types/react-router-dom": "^4.3.1",
		"core-js": "^2.6.2",
		"gh-pages": "^2.0.1",
		"react": "^16.7.0",
		"react-dom": "^16.7.0",
		"react-helmet": "^5.2.0",
		"react-lazy-load": "^3.0.13",
		"react-loader-spinner": "^2.3.0",
		"react-router-dom": "^4.3.1",
		"react-scripts": "2.1.3",
		"tachyons": "^4.11.1",
		"typescript": "^3.2.2"
	},
	"devDependencies": {
		"cross-env": "^5.2.0",
		"husky": "^1.3.1",
		"lint-staged": "^8.1.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^1.15.3",
		"source-map-explorer": "^1.6.0",
		"stylelint": "^9.9.0",
		"stylelint-config-standard": "^18.2.0",
		"tslint": "^5.12.1"
	},
	"scripts": {
		"start": "cross-env NODE_PATH=src/ react-scripts start",
		"build": "cross-env NODE_PATH=src/ react-scripts build",
		"analyze": "source-map-explorer build/static/js/main.*",
		"test": "cross-env NODE_PATH=src/ react-scripts test",
		"test:ci": "cross-env CI=true npm run test",
		"lint:ts": "tslint -c tslint.json -p tsconfig.json 'src/**/*.{ts,tsx}'",
		"lint:css": "stylelint \"src/**/*.css\"",
		"lint": "run-s lint:**",
		"prettier:check": "prettier --list-different \"src/**/*.{ts,tsx}\"",
		"prettier:write": "prettier --write \"src/**/*.{ts,tsx}\"",
		"fix:ts": "yarn prettier:write && yarn lint:ts --fix",
		"fix:css": "npm run lint:css -- --fix",
		"fix": "run-s fix:**",
		"predeploy": "yarn build",
		"deploy": "gh-pages -b master -d build"
	},
	"browserslist": [
		">0.2%",
		"not dead",
		"not ie <= 11",
		"not op_mini all"
	],
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"pre-push": "npm run test:ci"
		}
	},
	"lint-staged": {
		"*.ts": [
			"tslint --fix",
			"git add"
		],
		"*.tsx": [
			"tslint --fix",
			"git add"
		],
		"*.css": [
			"stylelint --fix",
			"git add"
		]
	},
	"jest": {
		"collectCoverageFrom": [
			"src/**/*.{ts,tsx,js,jsx}",
			"!src/index.tsx",
			"!src/utils/serviceWorker.ts"
		]
	},
	"eslintConfig": {
		"extends": "react-app"
	},
	"prettier": {
		"parser": "typescript",
		"trailingComma": "es5",
		"useTabs": true,
		"tabWidth": 4,
		"semi": false,
		"singleQuote": true,
		"printWidth": 100,
		"jsxBracketSameLine": true
	},
	"stylelint": {
		"extends": "stylelint-config-standard",
		"rules": {
			"indentation": "tab"
		}
	}
}
